<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

<div class="jumbotron text-center">
  <div class="container">
    <a href="/" class="lang-logo">
      <img src="/lang-logo.png">
    </a>
    <h1>ONLINE NOTEPAD</h1>
    <p>This is an online notepad where you can freely create and view memos wherever you go</p>
    <a type="button" id="button" class="btn btn-lg btn-default"><span class="glyphicon glyphicon-flash"></span> get started</a>
    <input type="text" id="channelInput" class="btn-lg btn-default" placeholder="enter your channel"></input>
  </div>
</div>
<div class="container">

<ul>
    <% results.forEach(function(r) { %>
      <% if (r.field.length>0) {%>
        <li><a href= <%= "/notes/"+r.channel %> ><%= r.channel + " (" + (r.field.length) + ")" %></a></li>
      <% } %>
    <% }); %>
</ul>

</div>

</body>
<script>
$(document).ready(function(){
    $("#button").click(function(){
      console.log("click");
      window.location = "/notes/"+$("#channelInput").val();
    });

    $(document).keypress(function(e) {
      if(e.which == 13) {
        console.log("click");
        window.location = "/notes/"+$("#channelInput").val();
      }
    });
});


</script>

</html>
